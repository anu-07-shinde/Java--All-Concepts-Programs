package Pattern;

public class AppuPatterns {
	
	public static void main(String[] args) {
		
		int row = 6;
		
		for(int i=0; i<=row; i++)
		{
			for(int j=0; j<=i; j++)
			{
				System.out.print("*");
			}
			
			for(int k=0; k<=i; k++)
			{
				System.out.print(" ");
			}
			
			for(int m=0; m<=i; m++)
			{
				System.out.print("*");
			}
			
			System.out.println();
		}
		
	}
}
